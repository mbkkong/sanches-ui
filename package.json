{
	"name": "sanches",
	"version": "1.0.0",
	"description": "Electron app with real-time security monitoring",
	"main": "dist/main.js",
	"scripts": {
		"start": "npm run build && electron .",
		"dev": "concurrently \"npm run build:watch\" \"npm run electron:dev\"",
		"build": "npm run build:renderer && npm run build:main",
		"build:main": "tsc",
		"build:renderer": "vite build",
		"build:watch": "concurrently \"tsc --watch\" \"vite build --watch\"",
		"electron:dev": "wait-on dist/main.js dist-react/index.html && electron . --remote-debugging-port=9222",
		"package": "npm run build && electron-builder",
		"package:mac": "npm run build && electron-builder --mac",
		"package:win": "npm run build && electron-builder --win",
		"package:linux": "npm run build && electron-builder --linux",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write ."
	},
	"keywords": [
		"electron",
		"security",
		"monitoring",
		"react"
	],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "2.3.5",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-select": "^2.2.6",
		"@radix-ui/react-slot": "^1.2.4",
		"@radix-ui/react-switch": "^1.2.6",
		"@radix-ui/react-tabs": "^1.1.13",
		"@tailwindcss/postcss": "^4.1.17",
		"@types/node": "^24.10.1",
		"@types/react": "^19.2.5",
		"@types/react-dom": "^19.2.3",
		"@types/ws": "^8.18.1",
		"@vitejs/plugin-react": "^5.1.1",
		"autoprefixer": "^10.4.22",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"concurrently": "^9.1.0",
		"electron": "^39.2.0",
		"electron-builder": "^26.0.12",
		"lucide-react": "^0.553.0",
		"tailwind-merge": "^3.4.0",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.7.2",
		"vite": "^7.2.2",
		"wait-on": "^9.0.3"
	},
	"dependencies": {
		"@radix-ui/react-scroll-area": "^1.2.10",
		"@radix-ui/react-separator": "^1.1.8",
		"@radix-ui/react-tooltip": "^1.2.8",
		"electron-store": "^11.0.2",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"ws": "^8.18.0"
	},
	"build": {
		"appId": "com.sanches.app",
		"productName": "Sanches",
		"directories": {
			"output": "release",
			"buildResources": "assets"
		},
		"files": [
			"dist/**/*",
			"dist-react/**/*",
			"assets/**/*",
			"sanches",
			"package.json"
		],
		"extraFiles": [
			{
				"from": "sanches",
				"to": "Resources/sanches",
				"filter": [
					"**/*"
				]
			}
		],
		"mac": {
			"category": "public.app-category.utilities",
			"target": "zip",
			"icon": "assets/sanches.png",
			"identity": null,
			"type": "distribution"
		},
		"win": {
			"target": "nsis"
		},
		"linux": {
			"target": "AppImage",
			"category": "Utility"
		}
	}
}
